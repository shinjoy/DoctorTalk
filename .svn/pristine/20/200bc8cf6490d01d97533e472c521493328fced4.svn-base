/* 로그인 ******************************/
.page-login {
	width:929px;
	height:774px;
	background:url("/images/bg_login.png") no-repeat;
	margin:20px auto;
	border:1px solid #000;
}
.logo-login {
	width:146px;
	margin:10px auto;
}
.logbox {
	background-color:#fff;
	border:1px solid #ededed;
	width:330px;
	height:380px;
	margin:150px auto 0;
	padding:35px 30px;
	background: #f7f7f7; -moz-liner-gradient(top, #f7f7f7 0%, #e9e9e9 100%); -webkit-gradient(liner, left top, left bottom, color-stop(0%,#f7f7f7), solor-stop(100%,#e9e9e9));
	-webkit-liner-gradient(top, #f7f7f7 0%, #e9e9e9 100%); -o-liner-gradient(top, #f7f7f7 0%, #e9e9e9 100%); -ms-liner-gradient(top, #f7f7f7 0%, #e9e9e9 100%); liner-gradient(top, #f7f7f7 0%, #e9e9e9 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f7f7f7', endColorstr='#e9e9e9',GradientType=0 ); /* IE6-9 */	-webkit-border-radius: 3px;	-moz-border-radius: 3px;	border-radius: 3px;
	border:1px solid #ddd;
}
h1.ad_title {font-family:'arial'; font-size:28px; font-weight:bold; color:#555; margin-top:17px;}
h3.ad_title1 {font-family:'arial'; font-size:16px; color:#777;}
h2.ad_title2 {font-family:arial; font-size:18px; color:#666; text-align:left; letter-spacing:-0.5px; }
h4.ad_title3 {font-family:돋움; font-size:11px; color:#666; text-align:left; margin:5px 0px 25px 0px; }
.log_form {text-align:left; margin-top:20px;}
.log_form li {margin-top:5px; text-align:center;}
.log_form li input {width:320px;}

/* 메인 페이지 ******************************/
.page-main {
	width:929px;
	height:774px;
	background:url("/images/bg_main.png") no-repeat;
	margin:20px auto;
	border:1px solid #000;
}
.left-board {
	float:left;
	margin:0px 0 30px 0px;
	width:596px;
}
.right-board {
	float:right;
	margin:0px 0px 30px 0;
}
.left-frame {
	width:420px;
	height:660px;
}
.right-frame {
	width:400px;
	height:660px;
}

/* 리스트 페이지 ******************************/
.contents-list {
	margin:0;
	padding:0;
}
.contents-list li {
	list-style:none;
	width:100%;
	cursor:pointer;
	background-color:#fff;
	border-bottom:1px solid #ddd;
}
.contents-list li .contents {
	margin:10px 0;
	width:100%;
}
.contents-list li:hover {
	background-position:0 -69px;
}
.contents-list li.notice-top {
	background-color:#ffffcb;
}
.contents-list li.notice-top:hover {
	background-position:0 69px;
}

.contents-info {
	float:left;
	width:80%;
}
.contents-title {
	margin:10px 5px 8px 20px;
	font-size:16px;
	font-weight:bold;
}
.contents-title-short {
	margin:10px 5px 5px 10px;
	font-size:16px;
	font-weight:bold;
	width:260px;
	color:#333;
}
.contents-user {
	display:inline-block;
	padding:1px 3px;
	margin:0 10px 0 20px;
	color:#fff;
	/*background-color:#9b7e7e;*/
	background-color:#999;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	-khtml-border-radius:3px;		
	border-radius:3px;
}
.contents-meta {
	margin-left:10px
}
.contents-arrow {
	float:left;
	margin:13px 0 0 10px ;
}

.bottom-dotted {
	width:100%;
	padding-bottom:10px;
	border-bottom:1px dotted #555;
}
.contents-contents {
	clear:both;
	padding:20px;
}
.contents-contents img {
	width:100%;
}
.contents-tools {
	margin:20px;
}

.read-more {
	width:100%;
	height:80px;
	padding-top:65px;
	text-align:center;
	background-color:#ccc;
}

/* 작성 페이지 ******************************/
.page-write {
	width:929px;
	height:774px;
	background:url("/images/bg_write.png") no-repeat;
	margin:20px auto;
	border:1px solid #000;
}
.write-form {
	width:610px;
	margin:20px auto 0;
}
