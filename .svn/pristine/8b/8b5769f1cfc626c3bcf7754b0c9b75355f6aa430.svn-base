	//저장후
	public UserGoal getuserGoal(String id) {
		String query = "" + 
				"SELECT top 1 * " +
				"FROM T_NF_USER_GOAL " +
				"WHERE user_id = ? order by reg_date desc";
		try{
			return (UserGoal)this.jdbcTemplate.queryForObject(query,  new Object[] { id },this.usergoalMapper);
		}catch(Exception e){
			return new UserGoal();
		}
	
	}
	
